	    "(.*)Lutris": "Lutris ",
	    "(.*)Wireshark": "Wireshark ",
	    "(.*)pavucontrol": "Pavucontrol ",
	    "blueman-manager": "Blueman ",
	    "Popsicle": "Popsicle ",
	    "Virtualbox(.*)": "Virtualbox ",
	    "(.*)ONLYOFFICE": "OnlyOffice ",
	    "(.*)Remmina": "Remmina ",
	    "(.*)qBittorrent": "qBittorrent ",
      },
